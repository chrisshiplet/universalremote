        <li class="item"><a href="{{ app.request.baseUrl }}/RM-AAU104/KEY_MUTE">MUTE</a></li>
        <li class="item"><a href="{{ app.request.baseUrl }}/RM-AAU104/KEY_SOUND">SOUND FIELD</a></li>
        <li class="item"><a href="{{ app.request.baseUrl }}/RM-AAU104/KEY_SELECT">INPUT SELECT</a></li>
