<body>

    <div class="wrapper">
    <ul>
        <li class="item"><a href="{{ app.request.baseUrl }}/RM-AAU104/KEY_POWER">AMP POWER</a></li>
        <li class="item"><a href="{{ app.request.baseUrl }}/RM-AAU104/KEY_POWER2">TV POWER</a></li>
